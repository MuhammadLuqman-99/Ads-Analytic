# =============================================================================
# Staging Environment Configuration
# =============================================================================

APP_ENV=staging
APP_DEBUG=false
APP_PORT=8080

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ads_aggregator_staging
DB_USER=ads_user
DB_PASSWORD=${DB_PASSWORD}
DB_SSL_MODE=require
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=10

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# API Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=1m

# Scheduler
SCHEDULER_ENABLED=true

# Stripe (Test Mode)
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# OAuth Redirect URIs (staging domain)
META_REDIRECT_URI=https://staging.yourapp.com/api/v1/oauth/meta/callback
TIKTOK_REDIRECT_URI=https://staging.yourapp.com/api/v1/oauth/tiktok/callback
SHOPEE_REDIRECT_URI=https://staging.yourapp.com/api/v1/oauth/shopee/callback
STRIPE_SUCCESS_URL=https://staging.yourapp.com/billing/success
STRIPE_CANCEL_URL=https://staging.yourapp.com/billing/cancel

# Frontend
NEXT_PUBLIC_API_URL=https://staging-api.yourapp.com
NEXT_PUBLIC_APP_NAME=Ads Analytics (Staging)
