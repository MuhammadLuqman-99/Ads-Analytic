# =============================================================================
# Production Environment Configuration
# WARNING: Never commit actual secrets. Use secret management.
# =============================================================================

APP_ENV=production
APP_DEBUG=false
APP_PORT=8080

# Database (use managed database service)
DB_HOST=${DB_HOST}
DB_PORT=5432
DB_NAME=ads_aggregator
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_SSL_MODE=verify-full
DB_MAX_OPEN_CONNS=50
DB_MAX_IDLE_CONNS=20
DB_CONN_MAX_LIFETIME=10m

# Redis (use managed Redis service)
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# JWT (use strong secrets in production)
JWT_SECRET=${JWT_SECRET}
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Encryption
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# API Rate Limiting (strict for production)
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=1m

# Scheduler
SCHEDULER_ENABLED=true

# Stripe (Live Mode)
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# OAuth Redirect URIs (production domain)
META_REDIRECT_URI=https://app.yourapp.com/api/v1/oauth/meta/callback
TIKTOK_REDIRECT_URI=https://app.yourapp.com/api/v1/oauth/tiktok/callback
SHOPEE_REDIRECT_URI=https://app.yourapp.com/api/v1/oauth/shopee/callback
STRIPE_SUCCESS_URL=https://app.yourapp.com/billing/success
STRIPE_CANCEL_URL=https://app.yourapp.com/billing/cancel

# Frontend
NEXT_PUBLIC_API_URL=https://api.yourapp.com
NEXT_PUBLIC_APP_NAME=Ads Analytics

# Platform APIs (production keys)
META_APP_ID=${META_APP_ID}
META_APP_SECRET=${META_APP_SECRET}
TIKTOK_APP_ID=${TIKTOK_APP_ID}
TIKTOK_APP_SECRET=${TIKTOK_APP_SECRET}
SHOPEE_PARTNER_ID=${SHOPEE_PARTNER_ID}
SHOPEE_PARTNER_KEY=${SHOPEE_PARTNER_KEY}
